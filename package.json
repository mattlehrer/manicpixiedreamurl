		"@sveltejs/adapter-node": "^1.3.1",
		"better-sqlite3": "^9.2.2",
		"drizzle-orm": "^0.29.1",
		"lucia": "^2.7.4",
		"open-props": "^1.6.13",
		"parse-domain": "^8.0.1",
		"validator": "^13.11.0"
	}
